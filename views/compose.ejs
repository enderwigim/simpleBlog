<%- include("partials/header") %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label class="mt-3">Title</label>
        <input class="form-control" type="text" name="postTitle" required> 
        <label class="mt-3">Post</label>
        <textarea class="form-control" name="postBody" rows="10" cols="50"></textarea>
        <button class="btn btn-primary mt-3" type="submit">Publish</button>
    </div>
</form>

